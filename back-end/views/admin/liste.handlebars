<h1>{{title}}</h1>

<button type="btn">RETOUR SUR LE SITE</button>

<h1>Mes publications</h1>

<!-- Associer bouton edit et delete à chaque article -->
{{#each posts}}
<tr class="table-row">
    <td class="table-posts">
        <div>{{this.titre}}</div>
    </td>
    <td class="table-posts">
        <div>{{this.type}}</div>
    </td>
    <td class="table-posts">
        <div>{{this.date}}</div>
    </td>
    <td class="table-division">
        <a href="admin/post/modification/{{this._id}}" data-id-post="{{this._id}}" class="fas fa-edit fas fa-table">
        </a>
    </td>
    <td class="table-division">
        <a href="admin/post/suppression/{{this._id}}" data-id-post="{{this._id}}" class="fa fa-trash fas fa-table">
        </a>
    </td>
</tr>
{{/each}}

{{#unless posts}}
<tr>
    <td colspan="">
        Il n'y a pas d'article pour l'instant
    </td>
</tr>
{{/unless}}


<div class="card" style="width: 18rem;">
    <a href="/article/{{this._id}}"></a>
    <div class="post-body">
        <h5 class="card-title">{{this.title}}</h5>

        <button type="modify-btn">Modifier</button>
        <button type="delete-btn">Supprimer</button>
        <button type="create-btn">
            <a href="/admin/creation">
                Créer un nouvel article
            </a>
        </button>
    </div>
</div>